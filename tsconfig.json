{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "client/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}